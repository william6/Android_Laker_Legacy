<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/DIR_listItem"
	android:layout_margin="5dp" >
	
	<ImageView
		android:id="@+id/LI_imgIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" />
	
	<TextView
		android:id="@+id/LI_txtTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="3dp"
		android:text=""
		android:textStyle="bold"
		android:textColor="#FF000000"
		android:layout_toRightOf="@id/LI_imgIcon"
		android:layout_alignTop="@id/LI_imgIcon" />
	
	<TextView 
		android:id="@+id/LI_txtSubtitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:padding="3dp"
		android:textColor="#FF000000"
		android:layout_toRightOf="@id/LI_imgIcon"
		android:layout_below="@id/LI_txtTitle" />

</RelativeLayout>
